@page
@model HasanAkca_Proje.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

        <style>
            body {
                background-image: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8bGlicmFyeXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&w=1000&q=80');
                background-size: cover
            }
        </style>
    </head>
    <body>
        <div class="container-fluid text-center">

            <div class="row h-100 d-flex align-items-center">


                <div class="col-12 d-flex justify-content-center d-flex align-items-center">


                    <div class="card rounded w-20  " style="height:12rem;width: 18rem;border:5px solid #402504">

                        <div class="card-body h-100" style="background-color:#177FBF;">
                            <form method="post">
                                <div class="form-group mb-2">

                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-posta" style="background-color:#F2BB77;color:#402504" asp-for="email">

                                </div>
                                <div class="form-group mb-2">

                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre" style="background-color:#F2BB77;" asp-for="sifre">
                                </div>
                                <button type="submit" class="btn btn-primary mt-2" style="background-color:#F25041;color:#402504">Giriş</button>
                                <p class="text-danger" style="font-weight:bold">@Model.hata</p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
